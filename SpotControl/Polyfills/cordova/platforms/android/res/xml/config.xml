<?xml version='1.0' encoding='utf-8'?>
<widget id="myPWABuilderApp.pwabuilder" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
        <param name="onload" value="true" />
    </feature>
    <feature name="HostedWebApp">
        <param name="android-package" value="com.manifoldjs.hostedwebapp.HostedWebApp" />
        <param name="onload" value="true" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <allow-intent href="market:*" />
    <icon density="hdpi" src="/assets/images/icons/android/mipmap-hdpi/ic_launcher.png" />
    <icon density="ldpi" src="/assets/images/icons/android/mipmap-ldpi/ic_launcher.png" />
    <icon density="mdpi" src="/assets/images/icons/android/mipmap-mdpi/ic_launcher.png" />
    <icon density="xhdpi" src="/assets/images/icons/android/mipmap-xhdpi/ic_launcher.png" />
    <icon density="xxhdpi" src="/assets/images/icons/android/mipmap-xxhdpi/ic_launcher.png" />
    <icon density="xxxhdpi" src="/assets/images/icons/android/mipmap-xxxhdpi/ic_launcher.png" />
    <name>SpotControl</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="http://192.168.0.4:8080/index.html" />
    <access origin="*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Fullscreen" value="false" />
    <allow-navigation hap-rule="yes" href="http://192.168.0.4:8080/*" />
</widget>
